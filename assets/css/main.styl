global-reset()

album_art_width = 100px

body
	background url("/img/grey_wash_wall.png")
	color white
	font-family 'sans'
	vertical-align top

#status_bar
	min-width 100%

#album_art
	display inline-block
	size album_art_width

#now_playing
	display inline-block
	position absolute
	left album_art_width
	right 0
	height album_art_width
	box-sizing border-box
	font-size 12px
	overflow-x hidden

#current_song, #controls
	padding 6px
	box-sizing border-box

#current_song, #controls
	position absolute
	z-index 2
	display inline-block
	vertical-align top

#visualization
	position absolute
	opacity 0.6

#visualization
	display block

#progress
	background rgba(255, 0, 0, 0.5)
	position absolute
	top 0
	white-space nowrap
	height album_art_width
	margin-right -20px
	pointer-events none

	&:before
		background rgba(0, 0, 255, 0.5)
		content ''
		width 100%
		display block
		position absolute
		left 100%
		height album_art_width
		width 10000px // really big

	p
		position absolute
		bottom 0
		left 0
		right 0
		text-align right
		z-index 2
		padding 6px
	
#sidebar, #songs, #header
	display inline-block
	

#songs

	.playing
		font-weight bold
