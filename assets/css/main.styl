global-reset()

status_bar_height = 100px

body
	background url("/img/grey_wash_wall.png")
	color white
	font-family 'sans'
	vertical-align top

#status_bar
	min-width 100%

#album_art
	display inline-block
	size status_bar_height

#now_playing
	display inline-block
	position absolute
	left status_bar_height
	right 0
	height status_bar_height
	box-sizing border-box
	font-size 12px
	overflow-x hidden

#current_song, #controls
	padding 6px
	box-sizing border-box

#current_song, #controls
	position absolute
	z-index 2
	display inline-block
	vertical-align top

#visualization
	position absolute
	opacity 0.6
	display block
	width 100%
	height status_bar_height

#progress
	background rgba(255, 0, 0, 0.5)
	position absolute
	top 0
	white-space nowrap
	height status_bar_height
	margin-right -20px
	pointer-events none

	&:before
		background rgba(0, 0, 255, 0.5)
		content ''
		width 100%
		display block
		position absolute
		left 100%
		height status_bar_height
		width 10000px // really big

	p
		position absolute
		bottom 0
		left 0
		right 0
		text-align right
		z-index 2
		padding 6px

sidebar_width = 200px
#sidebar
	width sidebar_width

#library
	position absolute
	left sidebar_width
	top status_bar_height
	right 0
	bottom 0

#header
	li
		display inline-block

#songs

	.playing
		font-weight bold

	.track
		margin 10px 0

		li
			display inline-block
			vertical-align top

		.title
			// since titles can vary so much, maybe this should be set dynamically based on the length of titles that are being displayed
			width 300px

		.duration
			width 70px


